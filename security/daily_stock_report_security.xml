<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Record Rule for Daily Stock Report -->
        <record id="daily_stock_report_rule" model="ir.rule">
            <field name="name">Daily Stock Report: See Only Same Company</field>
            <field name="model_id" ref="daily_stock_report.model_daily_stock_report"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
