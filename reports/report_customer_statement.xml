<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_customer_statement">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="customer">
                    <div class="page">
                        <h2>Customer: <span t-esc="customer.name"/></h2>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Invoice Date</th>
                                    <th>Invoice Number</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="customer.invoices" t-as="invoice">
                                    <tr>
                                        <td><span t-field="invoice.invoice_date"/></td>
                                        <td><span t-field="invoice.name"/></td>
                                        <td><span t-field="invoice.amount_total" t-options='{"widget": "monetary", "display_currency": "invoice.currency_id"}'/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p style="page-break-after: always;"></p> <!-- Ensure each customer starts on a new page -->
                    </div>
                </t>
            </t>
        </template>
        <record id="action_report_customer_statement" model="ir.actions.server">
            <field name="name">Print Statement for Customer</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                    'type': 'ir.actions.act_url',
                    'url': '/reports/customer_statement?invoice_ids=%s' % (','.join(map(str, records.mapped('id')))),
                    'target': 'new',
                }
            </field>
        </record>
    </data>
</odoo>
