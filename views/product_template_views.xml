<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="st_product_template_custom_view" model="ir.ui.view">
        <field name="name">sh.product.template.custom.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_id']" position="after">
                <field name="secondary_unit_enabled" />
                <field name="secondary_uom" attrs="{'invisible': [('secondary_unit_enabled', '=', False)],'required': [('secondary_unit_enabled', '=', True)]}"/>
                <field name="secondary_uom_rate" attrs="{'invisible': [('secondary_unit_enabled', '=', False)],'required': [('secondary_unit_enabled', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
