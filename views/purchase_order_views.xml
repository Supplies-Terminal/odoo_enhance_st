<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_form_custom" model="ir.ui.view">
        <field name="name">purchase.order.form.custom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="send_internal_button_action" string="Send Internal"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'purchase')]}"/>
                <button name="print_allocation_report" type="object" string="Allocation Report" class="oe_highlight"/>
           </xpath>
        </field>
    </record>
    <template id="report_purchase_order_allocation">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Allocation Report</h2>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Source</th>
                            <th>Product</th>
                            <th>Order</th>
                            <th>Quantity</th>
                            <th>Unit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td><t t-esc="o.source"/></td>
                                <td><t t-esc="o.product"/></td>
                                <td><t t-esc="o.order"/></td>
                                <td><t t-esc="o.quantity"/></td>
                                <td><t t-esc="o.unit"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
