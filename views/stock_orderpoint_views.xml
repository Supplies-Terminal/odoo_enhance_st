<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_warehouse_orderpoint_tree_editable" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.tree.editable</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='product_id']" position="after">
                <button name="%(action_orderpoint_replace)d" string="Replace" type="action" class="text-warning" icon="fa-bell-slash"
                    attrs="{'invisible': [('trigger', '!=', 'manual')]}" context="{'default_product_id': product_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
