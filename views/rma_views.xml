<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_rma_form_virtual_company" model="ir.ui.view">
        <field name="name">rma.view.form.virtualcompany</field>
        <field name="model">rma</field>
        <field name="inherit_id" ref="rma.rma_view_form"/>
        <field name="arch" type="xml">
           <field name="partner_id" position="before">
               <field name="current_company_is_virtual" invisible="1"/>
               <field name="sale_company_id" attrs="{'invisible': [('current_company_is_virtual', '=', False)]}"/>
           </field>
        </field>
    </record>
</odoo>
