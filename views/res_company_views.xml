<?xml version="1.0"?>
<odoo>
    <record id="view_company_form_inherit_st" model="ir.ui.view">
        <field name="name">res.company.form.st.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="private_product_only"/>
                <group name="Special Locations">
                    <field name="ricai_location_id"/>
                    <field name="mrp_location_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
