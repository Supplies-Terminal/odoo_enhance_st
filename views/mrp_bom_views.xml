<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mrp_bom_form_digits" model="ir.ui.view">
        <field name="name">mrp.bom.form.digits</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="attributes">
                <attribute name="digits">[16, 3]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
