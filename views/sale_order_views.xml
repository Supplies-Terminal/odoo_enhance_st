<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="pricing_with_latest_price_button_action" string="Use Last Price"
                            type="object"
                            class="oe_highlight"/>
                <button name="pricing_with_latest_cost_button_action" string="Use Last Cost"
                            type="object"
                            class="oe_highlight"/>
                <button name="intercompany_pricing_button_action" string="Inter-Company Pricing"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                <button name="action_create_sold_company_invoice" type="object" string="Create Sold Company Invoice" class="oe_highlight" attrs="{'invisible': [('sale_company_id', '=', False)]}"/>
           </xpath>
           <field name="partner_id" position="before">
               <field name="current_company_is_virtual" invisible="1"/>
               <field name="sale_company_id" attrs="{'invisible': [('current_company_is_virtual', '=', False)]}"/>
           </field>
           <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('type', '!=', 'private'), ('company_id', 'in', (False, company_id, sale_company_id))]</attribute>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_sold_company_invoices" type="object" class="oe_stat_button" icon="fa-file-text">
                    <field name="invoice_count" widget="statinfo" string="Sales Invoices"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
