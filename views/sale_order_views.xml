<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_custom" model="ir.ui.view">
        <field name="name">sale.order.form.custom</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="pricing_with_latest_price_button_action" string="Use Last Price"
                            type="object"
                            class="oe_highlight"/>
                <button name="pricing_with_latest_cost_button_action" string="Use Last Cost"
                            type="object"
                            class="oe_highlight"/>
                <button name="intercompany_pricing_button_action" string="Inter-Company Pricing"
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('state', '!=', 'sale')]}"/>
           </xpath>
        </field>
    </record>
    <record model="ir.actions.server" id="action_deliver_orders">
        <field name="name">Deliver Orders</field>
        <field name="model_id" ref="model_sale_order"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_deliver_order()
        </field>
    </record>
    <record id="view_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <tree>
                <field name="out_done_percentage" 
                    widget="progressbar" 
                    options="{'style': 'success'}"
                    attrs="{'invisible': [('packing_done', '=', False), ('out_done_percentage', '=', '1')]}"/>
                <button name="%(action_deliver_orders)d" type="action" icon="fa-truck" 
                    attrs="{'invisible': [('packing_done', '=', False), ('out_done_percentage', '=', '1')]}"/>
            </tree>
        </field>
    </record>
</odoo>
